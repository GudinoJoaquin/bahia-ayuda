---
import Fuente from "./Fuente.astro";
const { title, description, link } = Astro.props;
---

<div
  class="relative w-full h-[300px] max-w-2xl bg-white rounded-2xl shadow-lg p-6 flex flex-col space-y-4 border-4 border-transparent"
  style="border-image: linear-gradient(45deg, #74c9e3, #e61794) 1;"
>
  <h2 class="text-2xl font-bold text-gray-900">{title}</h2>
  <p class="text-gray-600">{description}</p>
  <Fuente fuente={link} className="self-end" />
</div>
