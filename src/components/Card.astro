---
const { title, description, link } = Astro.props;
---

<div class="relative w-full max-w-2xl bg-white rounded-2xl shadow-lg p-6 flex flex-col space-y-4 border-4 border-transparent"
     style="border-image: linear-gradient(45deg, #74c9e3, #e61794) 1;">
  <h2 class="text-2xl font-bold text-gray-900">{title}</h2>
  <p class="text-gray-600">{description}</p>

  <!-- Botón en la esquina inferior derecha con efecto underline -->
  <a 
    href={link} 
    class="absolute bottom-4 right-4 text-blue-600 text-sm font-medium underline-offset-4 transition-all hover:underline hover:text-blue-700"
  >
    Más info
  </a>
</div>
