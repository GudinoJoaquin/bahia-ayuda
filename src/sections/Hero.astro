---
import Button from "../components/Button.astro";
import MainButton from "../components/MainButton.astro";
---

<!-- Importación de la fuente Lilita One -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Lilita+One&display=swap"
  rel="stylesheet"
/>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Gruppo&family=Lilita+One&display=swap");

  .lilita-one-regular {
    font-family: "Lilita One", sans-serif;
    font-weight: 1000;
    font-style: normal;
  }

  .myfilter {
    filter: hue-rotate(0deg) saturate(1.1);
  }
</style>

<section
  class="relative min-h-screen bg-transparent flex flex-col justify-center items-center text-center"
>
  <div class="relative w-full px-[20px] flex justify-center">
    <h1
      class="lilita-one-regular font-bold bg-clip-text text-transparent relative leading-tight
            text-[18vw] sm:text-[14vw] md:text-[12vw] lg:text-[11vw] xl:text-[9vw] 2xl:text-[7vw]
            stroke-white"
      style="-webkit-text-stroke: 10px oklch(60.85% 0.229 2.39); oklch(62.92% 0.109 210.85); "
    >
      BahiaAyuda
    </h1>

    <div
      class="absolute inset-0 bg-cover bg-center bg-fixed myfilter"
      style="background-image: url('/main.jpeg'); -webkit-background-clip: text; background-clip: text; text-fill-color: transparent;"
    >
      <h1
        class="lilita-one-regular font-bold text-transparent leading-tight
              text-[16vw] sm:text-[14vw] md:text-[12vw] lg:text-[11vw] xl:text-[9vw] 2xl:text-[7vw]"
      >
        BahiaAyuda
      </h1>
    </div>
  </div>

  <p class="text-lg text-gray-800 max-w-[90%] sm:max-w-[80%]">
    Encuentra o brinda ayuda.
  </p>

  <div class="flex flex-wrap justify-center gap-[10px] px-[20px]">
    <a
      class="bg-white text-semibold px-[10px] py-[5px] rounded-[5px] shadow-lg"
      href="tel:08009992272">📞ABSA</a
    >
    <a
      class="bg-white text-semibold px-[10px] py-[5px] rounded-[5px] shadow-lg"
      href="tel:08009993337">📞EDESUR</a
    >
    <a
      class="bg-white text-semibold px-[10px] py-[5px] rounded-[5px] shadow-lg"
      href="tel:2914560000">📞Emergencias medicas</a
    >
    <a
      class="bg-white text-semibold px-[10px] py-[5px] rounded-[5px] shadow-lg"
      href="tel:103"
      >📞Defensa Civil
    </a>
    <a
      class="bg-white text-semibold px-[10px] py-[5px] rounded-[5px] shadow-lg"
      href="tel:2914551913">📞Bomberos</a
    >
    <a
      class="bg-white text-semibold px-[10px] py-[5px] rounded-[5px] shadow-lg"
      href="tel:109">📞Emergencias</a
    >
